<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layoutDirection="ltr"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.cardyapp.Activities.DrawerActivity"
    tools:showIn="@layout/app_bar_dasboard">

    <FrameLayout
        android:id="@+id/container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/ll_bottom_bar"
        android:layout_alignParentTop="true" />

    <LinearLayout
        android:id="@+id/ll_bottom_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:weightSum="4">

        <com.cardyapp.Views.CustomTextView
            android:id="@+id/tv_connections"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="2dp"
            android:layout_weight="1"
            android:background="@color/colorPrimary"
            android:drawablePadding="2dp"
            android:drawableTop="@drawable/ic_b_conection"
            android:gravity="center"
            android:paddingBottom="6dp"
            android:paddingTop="6dp"
            android:singleLine="true"
            android:text="@string/connections_text"
            android:textColor="@color/white" />

        <com.cardyapp.Views.CustomTextView
            android:id="@+id/tv_search"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="2dp"
            android:layout_weight="1"
            android:background="@color/colorPrimary"
            android:drawablePadding="2dp"
            android:drawableTop="@drawable/ic_b_search"
            android:gravity="center"
            android:paddingBottom="6dp"
            android:paddingTop="6dp"
            android:singleLine="true"
            android:text="@string/search_text"
            android:textColor="@color/white" />

        <com.cardyapp.Views.CustomTextView
            android:id="@+id/tv_qrScanner"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="2dp"
            android:layout_weight="1"
            android:background="@color/colorPrimary"
            android:drawablePadding="2dp"
            android:drawableTop="@drawable/ic_b_scnner"
            android:gravity="center"
            android:paddingBottom="6dp"
            android:paddingTop="6dp"
            android:singleLine="true"
            android:text="@string/QRScanner_title"
            android:textColor="@color/white" />

        <com.cardyapp.Views.CustomTextView
            android:id="@+id/tv_profile"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="2dp"
            android:layout_weight="1"
            android:background="@color/colorPrimary"
            android:drawablePadding="2dp"
            android:drawableTop="@drawable/ic_b_profile"
            android:gravity="center"
            android:paddingBottom="6dp"
            android:paddingTop="6dp"
            android:singleLine="true"
            android:text="@string/profile_text"
            android:textColor="@color/white" />
    </LinearLayout>
</RelativeLayout>
