<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:animateLayoutChanges="true"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        app:cardElevation="2dp"
        android:layout_marginBottom="@dimen/row_padding_left_right"
        android:layout_marginLeft="@dimen/row_padding_left_right"
        android:layout_marginRight="@dimen/row_padding_left_right"
        android:layout_marginTop="@dimen/row_padding_left_right"
        android:paddingTop="18dp"
        android:paddingBottom="18dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:orientation="vertical"
            android:layout_margin="8dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <FrameLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/civ_profile"
                        android:layout_width="@dimen/connection_row_profile_width"
                        android:layout_height="@dimen/connection_row_profile_height"
                        android:background="@drawable/connection_row_bg"
                        android:src="@color/hintColor" />

                    <View
                        android:layout_width="@dimen/connection_row_profile_width"
                        android:layout_height="@dimen/connection_row_profile_height"
                        android:background="@drawable/connection_row_bg" />
                </FrameLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:orientation="vertical">

                    <com.cardyapp.Views.CustomTextView
                        android:id="@+id/tv_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:paddingLeft="16dp"
                        android:text="Priyanka"
                        android:textStyle="bold" />

                    <com.cardyapp.Views.CustomTextView
                        android:id="@+id/tv_role"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:paddingLeft="16dp"
                        android:text="Priyanka" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/buttonContainer"
                android:orientation="vertical"
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <com.cardyapp.Views.CustomTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/signup_btn_margin_top"
                    android:paddingBottom="4dp"
                    android:text="Current Company :" />

                <com.cardyapp.Views.CustomTextView
                    android:id="@+id/tv_currentCompany"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Priyanka Madgundi"
                    android:textColor="@color/hintColor" />

                <com.cardyapp.Views.CustomTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/signup_btn_margin_top"
                    android:paddingBottom="4dp"
                    android:text="Email :" />

                <com.cardyapp.Views.CustomTextView
                    android:id="@+id/tv_email"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Priyanka Madgundi"
                    android:textColor="@color/hintColor" />

                <com.cardyapp.Views.CustomTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/signup_btn_margin_top"
                    android:paddingBottom="4dp"
                    android:text="Contact Number :" />

                <com.cardyapp.Views.CustomTextView
                    android:id="@+id/tv_contactNumber"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Priyanka Madgundi"
                    android:textColor="@color/hintColor" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:weightSum="3">

                    <com.cardyapp.Views.CustomTextView
                        android:id="@+id/tv_accept"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.9"
                        android:background="@drawable/btn_accept_bg"
                        android:gravity="center"
                        android:text="@string/Accept_text" />

                    <com.cardyapp.Views.CustomTextView
                        android:id="@+id/tv_reject"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.9"
                        android:background="@drawable/btn_reject_bg"
                        android:gravity="center"
                        android:text="@string/Reject_text" />

                    <com.cardyapp.Views.CustomTextView
                        android:id="@+id/tv_acceptAndRevert"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1.2"
                        android:background="@drawable/btn_accept_revert_bg"
                        android:gravity="center"
                        android:text="@string/btn_accept_revert" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </android.support.v7.widget.CardView>

</LinearLayout>